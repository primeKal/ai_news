# Telegram Bot Token — get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Channel ID — e.g. -1001234567890 or @your_channel_username
TELEGRAM_CHANNEL_ID=your_channel_id_here

# Schedule time (24h format, UTC) — only used with --schedule flag
SCHEDULE_HOUR=8
SCHEDULE_MINUTE=0

# AI Summarization (Optional generative rephrasing)
# Get a key at https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
SUMMARIZATION_MODE=generative
